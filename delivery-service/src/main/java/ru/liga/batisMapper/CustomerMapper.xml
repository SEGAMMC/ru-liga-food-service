<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ru.liga.batisMapper.CustomerMapper">

    <select
            id="getCustomerById" parameterType="java.lang.Long"
            resultMap="customer">
        <!--выбираем resultMap, чтоб определить как мапить поля результата на сущность MyBatis-->
        select * from customers
        where (1=1)
        <if test="id != null">
            and id = #{id}
        </if>
    </select>

    <select
            id="getCustomerByPhone" parameterType="java.lang.String"
            resultMap="customer">
        <!--выбираем resultMap, чтоб определить как мапить поля результата на сущность MyBatis-->
        select * from customers
        where (1=1)
        <if test="phone != null">
            and phone = #{phone}
        </if>
    </select>

    <select
            id="getCustomerByEmail" parameterType="java.lang.String"
            resultMap="customer">
        <!--выбираем resultMap, чтоб определить как мапить поля результата на сущность MyBatis-->
        select * from customers
        where (1=1)
        <if test="email != null">
            and email = #{email}
        </if>
    </select>

    <update id="updateCustomerPhone" parameterType="ru.liga.entity.Customer">
        update customers
        <set>
            <if test="phone != null">
                descr = #{phone},
            </if>
        </set>
        where id = #{id}
    </update>

    <resultMap id="customer" type="ru.liga.entity.Customer">
        <id property="id" column="id"/>
        <result property="id" column="id"/>
    </resultMap>

    <resultMap id="customer" type="ru.liga.entity.Customer">
        <id property="id" column="id"/>
        <result property="phone" column="phone"/>
    </resultMap>

    <resultMap id="customer" type="ru.liga.entity.Customer">
        <id property="id" column="id"/>
        <result property="email" column="email"/>
    </resultMap>

</mapper>