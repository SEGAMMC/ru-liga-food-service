<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ru.liga.batisMapper.OrderItemMapper">

    <select
            id="getOrderItemById" parameterType="java.lang.Long"
            resultMap="orderItem">
        <!--выбираем resultMap, чтоб определить как мапить поля результата на сущность MyBatis-->
        select * from orderItems
        where (1=1)
        <if test="id != null">
            and id = #{id}
        </if>
    </select>

    <select
            id="getRestaurantMenuItemById" parameterType="java.lang.Long"
            resultMap="restaurantMenuItem">
        <!--выбираем resultMap, чтоб определить как мапить поля результата на сущность MyBatis-->
        select * from orderItems
        where (1=1)
        <if test="id != null">
            and id = #{id}
        </if>
    </select>

    <resultMap id="orderItem" type="ru.liga.entity.OrderItem">
        <id property="id" column="id"/>
        <result property="id" column="id"/>
    </resultMap>

    <resultMap id="restaurantMenuItem" type="ru.liga.entity.RestaurantMenuItem">
        <id property="id" column="id"/>
        <result property="id" column="id"/>
    </resultMap>

</mapper>